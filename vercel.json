{
  "version": 2,
  "builds": {
    "src": {
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html",
      "has": [
        {
          "type": "file",
          "files": [
            "dist/**/*"
          ]
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}